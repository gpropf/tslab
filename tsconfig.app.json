{
  "extends": "./node_modules/@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "./PixelReactor.ts",
    "./Gson.ts",
    "./Util.ts",
    "src/scripts/pngjs-helper.js"
  ],
  "exclude": ["src/**/__tests__/*", "**/deprecated/*"],
  "compilerOptions": {
    "allowJs": true,
    "types": ["node"],
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2018",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
